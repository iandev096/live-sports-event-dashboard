{
  "name": "live-sports-event-dashboard",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:docker": "concurrently \"pnpm dev:frontend\" \"pnpm docker:backend:dev\"",
    "docker:backend:build": "docker build -f apps/backend/Dockerfile -t sports-dashboard-backend .",
    "docker:backend:build:dev": "docker build -f apps/backend/Dockerfile.dev -t sports-dashboard-backend-dev .",
    "docker:backend:dev": "docker-compose -f docker-compose.dev.yml up backend",
    "docker:backend:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:backend:logs": "docker-compose -f docker-compose.dev.yml logs -f backend",
    "docker:backend:shell": "docker-compose -f docker-compose.dev.yml exec backend sh",
    "docker:backend:restart": "docker-compose -f docker-compose.dev.yml restart backend",
    "db:setup": "docker-compose -f docker-compose.dev.yml up -d postgres && sleep 5 && pnpm --filter backend db:push && pnpm --filter backend db:seed",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && pnpm db:setup",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "concurrently \"pnpm build:frontend\" \"pnpm build:backend\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "private": true,
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
